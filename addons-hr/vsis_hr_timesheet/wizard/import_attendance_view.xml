<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_import_attendance" model="ir.ui.view">
            <field name="name">import.attendance.form</field>
            <field name="model">import.attendance</field>
            <field name="arch" type="xml">
                <form string="Timesheet from attendance" version="7.0">
                    <group string="Load" col="4" >
                        <field name="temp_usb"/>
                        <newline/>
                        <field name="temp_csv"/>
                    </group>
                    <footer>
                        <button name="confirm" string="OK" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_attendance" model="ir.actions.act_window">
            <field name="name">Import attendance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.attendance</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="import_attendance_value">
            <!--<field name="model_id" ref="hr.model_attendance" />-->
            <field name="name">Import attendance</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_import_attendance'))" />
            <field name="key">action</field>
            <field name="model">hr.attendance</field>
        </record>

    </data>
</openerp>
