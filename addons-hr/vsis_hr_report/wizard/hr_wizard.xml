	<record model="ir.ui.view" id="wizard_list_employee_tv">
			<field name="name">list.employee.tv.form</field>
			<field name="model">list.employee.tv</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="List Employee Subcontract" version="7.0">					
					<group col="4" colspan="4">						
						<field name="date_from"/>
						<field name="date_to"/>						
					</group>
					<group col="4" colspan="4">						
						<field name="department" />							
					</group>		
					<footer>
	                        <button string="Print" name="print_report" type="object" class="oe_highlight"/> or
	                        <button string="Cancel" class="oe_link" special="cancel"/>
	                </footer>			
				</form>
			</field>
		</record>
		
		<record id="action_list_employee_tv" model="ir.actions.act_window">
            <field name="name">List Employee Subcontract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">list.employee.tv</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
      
        <menuitem action="action_list_employee_tv" 
        		id="menu_action_list_employee_tv" 
        		parent="menu_infor_employee"
				icon = "STOCK_PRINT"
				 />
				 
	
	
