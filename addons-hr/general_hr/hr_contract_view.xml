<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
<!--hr.grade.salary-->	
		<record id="view_hr_grade_salary_filter" model="ir.ui.view">
            <field name="name">view.hr.grade.salary.filter</field>
            <field name="model">hr.grade.salary</field>
            <field name="type">search</field>
            <field name="arch" type="xml">	
            	<search string="Grade">
            		<filter icon="terp-personal+" domain="[('active','=',True)]" name="active_filter" string="Active"/>
	            	<field name="code"/>
	            	<field name="name"/>
	            	<field name="ratio" />
	            	<field name="active"/>	            	              
	                <group expand="0" string="Group By...">
	                	<filter string="Ratio" icon="terp-personal" domain="[]" context="{'group_by':'ratio'}"/>                                                           
	                </group>
           		</search>
           	</field>
        </record>
        
        <record id="view_hr_grade_salary_tree" model="ir.ui.view">
            <field name="name">view.hr.grade.salary.tree</field>
            <field name="model">hr.grade.salary</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">	
            <tree string="Grade" editable="bottom">
            	<field name="code"/>
            	<field name="name"/>
            	<field name="ratio" />
            	<field name="active"/>
           </tree>
           </field>
        </record>
        
		<record id="view_hr_grade_salary_form" model="ir.ui.view">
            <field name="name">view.hr.grade.salary.form</field>
            <field name="model">hr.grade.salary</field>
            <field name="type">form</field>
            <field name="arch" type="xml">	
            	<form string="Employee Grade">
            		<group  col="8">           	
		            	<field name="code"/>
		            	<field name="name" colspan="4"/>
		            	<field name="active"/>
		            	<field name="ratio" />
	            	</group>       	
           		</form>
           	</field>
        </record>   
	            
        <record id="action_hr_grade_salary" model="ir.actions.act_window">
            <field name="name">Employee Grade</field>
            <field name="res_model">hr.grade.salary</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_active_filter': 1}</field>
        </record>
        <menuitem id="menu_hr_grade_salary" parent="hr_contract.next_id_56" action="action_hr_grade_salary"/>
        
            
<!--Addendum of contract category-->   
		<record model="ir.ui.view" id="view_hr_addendum_of_contract_category_filter">
            <field name="name">hr.addendum.of.contract.category.filter</field>
            <field name="model">hr.addendum.of.contract.category</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
            <search string="Addendum Of Contract Category">
                <field name="code"/>
                <field name="name"/>
            </search>            
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_hr_addendum_of_contract_category_form">
            <field name="name">hr.addendum.of.contract.category.form</field>
            <field name="model">hr.addendum.of.contract.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Addendum Of Contract Category">
                <group col="8" colspan="4">
             		<field name="code"/>
                	<field name="name" colspan="4"/>  
                	<field name="active"/>  
                </group>  
            </form>            
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_hr_addendum_of_contract_category_tree">
            <field name="name">hr.addendum.of.contract.category.tree</field>
            <field name="model">hr.addendum.of.contract.category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
            <tree string="Addendum Of Contract Category">
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>    
            </tree>            
            </field>
        </record>
        
        <record id="action_hr_addendum_of_contract_category" model="ir.actions.act_window">
            <field name="name">Addendum Of Contract Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.addendum.of.contract.category</field>
            <field name="context">{'search_default_active_filter': 1}</field>
            <field name="view_type">form</field>
        </record>
        
        <menuitem 
            id="menu_hr_addendum_of_contract_category"  
            action="action_hr_addendum_of_contract_category"
            parent="hr_contract.next_id_56"/>
        
      	<record id="hr_contract_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.contract.view.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
	           	<xpath expr="//form[@string='Contract']"  position="replace">
	           		<form string="Contract" version="7.0">
	           			<sheet>
	           				<group col='4' colspan='2'>
			            		<group>
					                <field name="name" string = "Contract Number"/>
					                <field name="date_start"/>
					                <field name="contract_signing_date"/>
					                <field name="office_id"/>
					                <field name="grade_id"/>
					                <field name="signer"/>
					                <field name="base_on_the_number"/>
					                <field name="wage"/>
				                </group>
				                <group>
					                <field name="type_id"/>
					                <field name="employee_id"/>
					                <field name="date_end" string="Contract Expiration Date"/>
					                <field name="job_id"/>
					                <field name="insurance_wage"/>
					                <field name="qualification_id"/>
					                <field name="form_of_payment"/>
					                <field name="working_hours"/>
				                </group>
		                	</group>
		                	<group>
			                	<field name="notes"/>
			                	<field name="db_datas"/>
		                	</group>
		                	<group string="Appendix Of Contract">
			                	<field name="addendum_of_contract" nolabel='1'>
		                        	<tree string="Appendix Of Contract" editable='top'>
		                        		<field name="category_id"/>
		                        		<field name="code"/>
			                    		<field name="money" />
				                		<field name="efficiency_date" />
			                        	<field name="sign_date"/>
		                            </tree>		                            
		                        </field>
		                	</group>
	           			</sheet>
	           		</form>
	           	</xpath>
            </field>
        </record>
        
        
    </data>      
</openerp>
