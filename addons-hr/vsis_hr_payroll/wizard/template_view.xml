<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_add_template_line" model="ir.ui.view">
            <field name="name">Add Template Line</field>
            <field name="model">add.template.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
               <form string="Add Template Line" version="7.0">
	               <group>
	        			<field name="cate_ids" colspan="4" nolabel="1">
		        			<tree string="">
		        				<field name="name"/>    
			               		<field name="sequence"/>                  			               		
		               		</tree>
	        			</field>
        			</group>   
        			<footer>	               		
	               		<button name="action_open_window" string="Apply" type="object" icon="gtk-ok" class="oe_highlight"/>
	               		or
	               		<button special="cancel" string="_Cancel" class="oe_link"/>
           	    	</footer>     			        			
    			</form>
            </field>
		</record>
		
		<act_window 
            name="Add Line"
            res_model="add.template.line"
            src_model="hr.template"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="add_template_line_action" />
            
		 <record model="ir.ui.view" id="hr_template_form_inherit">
	        <field name="name">hr.template.form</field>
	        <field name="model">hr.template</field>
	        <field name="inherit_id" ref="hr_template_form"/>
	        <field name="arch" type="xml">
	        	<field name="name" position="after" version="7.0">
	        		<button type="action" colspan="2"
                            name="%(add_template_line_action)d"
                            string="Add Line" class="oe_highlight"/>
	        	</field>  
	        </field>
		</record>    
	</data>      
</openerp>
