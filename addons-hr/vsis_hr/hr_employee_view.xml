============
maternity detail
============
		<record id="view_hr_maternity_detail_filter" model="ir.ui.view">
            <field name="name">hr.maternity.detail.filter</field>
            <field name="model">hr.maternity.detail</field>       
            <field name="type">search</field>
            <field name="arch" type="xml">            	
            <search string="Maternity">                                  
            	<field name="maternity_id" domain="[('active','=',True)]"/> 
            	<field name="employee_id"/> 
                <field name="date_start"/> 
                <field name="date_stop"/>                          
                <group expand="0" string="Group By...">
                	<filter string="Maternity" icon="terp-personal" domain="[]" context="{'group_by':'maternity_id'}"/>
                    <filter string="Employee" icon="terp-personal" domain="[]" context="{'group_by':'employee_id'}"/>                                       
                </group>	               
             </search>
             </field>
        </record>
		<record model="ir.ui.view" id="view_hr_maternity_detail_form">
            <field name="name">hr.maternity.detail.form</field>
            <field name="model">hr.maternity.detail</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string ="Maternity" version="7.0">
            	<sheet>
            	<group>
	            	<field name="employee_id" required="1"/>
	            	<field name="maternity_id" required="1"/> 
	                <label for="date_start" string="Duration"/>
	                <div>
		                <field name="date_start" required="1" class="oe_inline"/> -  
		                <field name="date_stop" class="oe_inline"/>
	                </div>
                </group>
                </sheet>  	
            </form>            
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_hr_maternity_detail_tree">
            <field name="name">hr.maternity.detail.tree</field>
            <field name="model">hr.maternity.detail</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
            <tree string="Maternity" editable="top">
            	<field name="employee_id" required="1"/>
        		<field name="maternity_id" required="1"/> 
        		<field name="date_start" required="1"/> 
                <field name="date_stop"/>
            </tree>            
            </field>
        </record>
        
        <record id="action_hr_maternity_detail" model="ir.actions.act_window">
            <field name="name">Maternity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.maternity.detail</field>
            <field name="view_type">form</field>
        </record>  
            
        <menuitem 
        	sequence="3"
            id="menu_hr_maternity_detail"  
            action="action_hr_maternity_detail"
            parent="hr.menu_hr_main"/>    
                          
