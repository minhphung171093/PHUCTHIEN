               		<field name="birthday"/> 
               		<field name="identification_id"/>
               		<field name="emp_code" string="Tax Code"/>	
               		<field name="sinid" string="SIN"/>                                 
               		<field name="department_id"/>
               		<field name="job_id"/>     
               		<field name="company_basic_id" invisible="1"/>               
               		<field name="parent_id" invisible="1"/>	        
               		<field name="marital" invisible="1"/>	                                       
               		<field name="coach_id" invisible="1" />  
               		<field name="religion_id" invisible="1"/>
					<field name="ethnic_id" invisible="1"/>	 
					<field name="level_id" invisible="1" />	              
           		</tree>
            </field>
        </record>

