        <record id="edit_holiday_new" model="ir.ui.view">
            <field name="name">GS Leave Request</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_new"/>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <button string="Approve" name="validate" position="replace">
                    <button string="Approve" name="validate" states="confirm" type="workflow" groups="vsis_hr.group_manager" class="oe_highlight"/>
                </button>
                <button string="Validate" name="second_validate" position="replace">
                    <button string="Validate" name="second_validate" states="validate1" type="workflow" groups="vsis_hr.group_director" class="oe_highlight"/>
                </button>
                <button string="Refuse" name="refuse" position="replace">
                    <button string="Refuse" name="refuse" states="confirm,validate1,validate" type="workflow" groups="vsis_hr.group_manager"/>
                </button>
                <button string="Reset to New" name="set_to_draft" position="replace">
                    <button string="Reset to New" name="set_to_draft" states="refuse" type="object" groups="vsis_hr.group_user"/>
                </button>
            	<field name="name" position="after">
            		<field name="notes"/>
            		<field name="remaining_holiday" invisible ="1"/>
            	</field>
            	<xpath expr="//form/sheet/group/group/div/div"  position="replace">
                	<field name="number_of_days_temp" class="oe_inline"/> hours
                </xpath>           
            </field>
        </record>
