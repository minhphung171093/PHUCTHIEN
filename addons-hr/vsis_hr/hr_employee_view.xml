<!-- inherit employee form--> 
        <record model="ir.ui.view" id="view_employee_form_inherit">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">  
            	<field name="user_id" position="after">
            		<field name="company_basic_id"/>
                     <field name="user_manager_id"/>
            	</field>
            	<xpath expr="//div[@class='oe_title']" position="replace">
                	<div class="oe_title">
                    	<label for="name" string="Employee" class="oe_edit_only"/>
                        <h1>             
                        	<field name="last_name" class="oe_inline" placeholder="Last Name ..." on_change="onchange_name_birthday(name, last_name, birthday)"/>
           					<label string=" "/>
           					<field name="name" class="oe_inline" placeholder="Fist Name ..." on_change="onchange_name_birthday(name, last_name, birthday)"/>
                        </h1>  
                        <label for="category_ids" class="oe_edit_only"/>
                        <field name="category_ids" widget="many2many_tags" placeholder="e.g. Part Time"/>
                    </div>
                </xpath>                
            	<xpath expr="//group[@string='Position']" position="after">
	            	<group string="Internal Reference">
	           			<field name="count" invisible="1"/>    
	                   	<field name="create_code_date" class="oe_inline"/>
	                   	<field name="code"/>  
	                   	<field name="code_new"/>                   
				    </group>			       
            	</xpath>
            	<xpath expr="//field[@name='active']" position="after">
            		<label for="stop_working_date" string="Resign"/>
	            	<div>  
	                    <field name="stop_working_date" class="oe_inline"/> - <b>
				        <field name="reason_id" domain="[('active','=',True)]" class="oe_inline" placeholder="Reason ..."/></b>
				    </div>		       
            	</xpath>
                    
                <xpath expr="//field[@name='country_id']" position="after">
					<field name="native_place"/>	      	
					<field name="religion_id" domain="[('active','=',True)]"/>
					<field name="ethnic_id" domain="[('active','=',True)]"/>
					<field name="level_id" domain="[('active','=',True)]"/>
					<field name="major_ids" widget="many2many_tags" placeholder="Majors..."/>
					<field name="certification_ids" widget="many2many_tags" placeholder="Certification..."/>
                </xpath>
                <xpath expr="//field[@name='identification_id']" position="replace"/> 
                <xpath expr="//field[@name='otherid']" position="replace"/>   
                <xpath expr="//field[@name='passport_id']" position="replace"/> 
                <xpath expr="//field[@name='bank_account_id']" position="replace"/>                		         			                									  		             
	            <xpath expr="//group[@string='Status']" position="before">
	            	<group string="Identification &amp; Other ID">
	            		<field name="identification_id" required="1" on_change="onchange_identification_id(identification_id)"/>
	            		<field name="identification_id_date" string="Issued Date"/>
                    	<field name="identification_id_place" string="Issued Place"/>
                    	<field name="otherid" string="Tax Code" on_change="onchange_emp_code(otherid)" groups="base.group_hr_user"/>
                    	<field name="passport_id" groups="base.group_hr_user"/>
						<field name="bank_account_id"/>
                    </group>
                	<group string="Social Insurance Book">
	                    <field name="sinid" string="No." help="Social Insurance Book" on_change="onchange_sinid(sinid)"/>
	                    <field name="sinid_date" string="Issued Date"/>
	                    <field name="sinid_place" string="Issued Place"/>    
                    </group>
                    <group string="Unemployment Insurance">
	                    <field name="ssnid_date" string="Unemployment Insurance Date"/>	 
	                    <field name="union_date" />	                    
                    </group>
                    <group string="Accident Insurance">
                    	<field name="accident_code_type" string="Accident Insurance Hospital"/>
	                    <field name="accident_code_date" string="Accident Insurance Date"/>
	                    <field name="accident_code_stop_date" string="Accident Insurance Stop Date"/>
                    </group>
	            </xpath>
	            <xpath expr="//field[@name='address_home_id']" position="after">	                                           		                        
		             <field name="address_temp_id" context="{'show_address': 1}" options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}"/>
		        </xpath>        	
		        <xpath expr="//page[@string='Personal Information']" position="after">
	                <page string='Family'>  
	                	<group>
	                		<field name="depend_qty"/>
	                	</group>       		       		   
	                    	<field name="family_ids" colspan="4" nolabel="1">
		                        <form string="Family" version="7.0">
		                        	<div class="oe_title">
                        				<div class="oe_edit_only">
				               				<label for="name" string="Full Name"/>(<field name="depend" class="oe_inline"/><label for="depend" string="Depend"/>)
				               			</div>
				               			<h1>
				               				<field name="name" default_focus="1" placeholder="Name"/>
				               			</h1>
				               		</div>
				               		<br/>
				               		<group col="4" colspan="4">
				               			<group string="Personal Information" colspan="2">
				               				<field name="rel_id" domain="[('active','=',True)]"/>
				               				<field name="id_no"/>
				               				<field name="tax_code"/>
				               				<field name="birthday"/>														
				               				<field name="function_id" domain="[('active','=',True)]"/>				               				
				               			</group>
				               			<group string="Contact Information" colspan="2">
						               		<field name="address_id"/>
						               		<field name="address_home_id"/>
						               		<field name="phone"/>
						               		<field name="email" widget="email"/>	               	
				              			</group>
				              		</group>  		
				                    <field name="note" placeholder="Notes..."/>  
			               		</form>
				                <tree string="Family">	
				                	<field name="rel_id"/>		               		
				               		<field name="name"/>			               						
				               		<field name="depend"/>
				               		<field name="id_no"/>
				               		<field name="tax_code"/>
				               		<field name="function_id"/>
				               		<field name="address_home_id"/>
				               		<field name="phone"/>
				               		<field name="email"/>
				               </tree>
	                        </field>               		                		
	                	</page> 
	                	<page string='Work Records'>                		   
	                        <field name="work_ids" nolabel="1">
		                        <form string="Work Process" version="7.0">
		                        	<group col="4">
		                        		<field name="name"/>
		                        		<field name="job_id"/>
		                        		<label for="start_date" string="Duration"/>
		                        		<div>
				                        	<field name="start_date" class="oe_inline"/> - <field name="end_date" class="oe_inline"/>
				                        </div>
				                       
				                        <field name="address_id"/>
				               		</group>
			                        <field colspan="4" name="notes" placeholder="Notes..." nolabel="1"/>  
			               		</form>
				                <tree string="Work Process">		               		
				               		<field name="name"/>
			                        <field name="start_date"/>	                         	
			                        <field name="end_date"/>
			                        <field name="address_id"/>
			                        <field name="job_id"/>
				               </tree>
	                        </field>               		                		
	                	</page>              	     		
	                	<page string='Training'>                		   
	                        <field name="training_ids" nolabel="1">
		                        <form string="Training Process" version="7.0">
		                        	<group col="4">
		                        		<field name="name"/>
		                        		<field name="certification_id"/>
		                        		<label for="start_date" string="Duration"/>
		                        		<div>
				                        	<field name="start_date" class="oe_inline"/> - <field name="end_date" class="oe_inline"/>
				                        </div>
				                       
				                        <field name="address_id"/>
                                        <field name="file" widget="image" class="oe_left oe_avatar"/>
				               		</group>
			                        <field colspan="4" name="notes" placeholder="Notes..." nolabel="1"/>  
			               		</form>
				                <tree string="Training Process">		               		
				               		<field name="name"/>
			                        <field name="start_date"/>	                         	
			                        <field name="end_date"/>
			                        <field name="address_id"/>
			                        <field name="certification_id"/>
				               </tree>
	                        </field>               		                		
	                	</page>              	     		
                </xpath>                              
            </field>
        </record>
<!-- inherit hr_employee kanban -->
		<record model="ir.ui.view" id="hr_kanban_view_employees_inherit">
