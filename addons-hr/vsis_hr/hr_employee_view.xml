		<record id="view_hr_uniform_filter" model="ir.ui.view">
            <field name="name">hr.uniform.filter</field>
            <field name="model">hr.uniform</field>       
            <field name="type">search</field>
            <field name="arch" type="xml">            	
            <search string="Uniform">                                  
            	<field name="employee_id"/> 
                <field name="date"/> 
                <field name="note"/>  
                <newline/>                  
                <group expand="0" string="Group By...">                	
                    <filter string="Employee" icon="terp-personal" domain="[]" context="{'group_by':'employee_id'}"/>                                       
                </group>	               
             </search>
             </field>
        </record>
		<record model="ir.ui.view" id="view_hr_uniform_form">
            <field name="name">hr.uniform.form</field>
            <field name="model">hr.uniform</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string ="Uniform" version="7.0">
            	<sheet>
	            	<group>
	            		<field name="employee_id" required="1"/>           	 
	                	<field name="date" required="1"/> 
	            	</group>
	            	<field name="note" colspan="4" placeholder="Notes ..."/>
            	</sheet>  	
            </form>            
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_hr_uniform_tree">
            <field name="name">hr.uniform.tree</field>
            <field name="model">hr.uniform</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
            <tree string="uniform" editable="top">
            	<field name="employee_id" required="1"/>
        		<field name="date" required="1"/> 
                <field name="note"/>
            </tree>            
            </field>
        </record>
        
        <record id="action_hr_uniform" model="ir.actions.act_window">
            <field name="name">Uniform</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.uniform</field>
            <field name="view_type">form</field>
        </record>
        
        <menuitem 
        	sequence="3"
            id="menu_hr_uniform"  
            action="action_hr_uniform"
            parent="hr.menu_hr_main"/>   
