<openerp>
    <data>
		<record id="view_employee_form_add_salary_structure" model="ir.ui.view">
            <field name="name">view.employee.form.add.salary.structure</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@string='Position']" position="after">
                        <group string="Salary Rules">
                        	<field name="joining_date"/>
                            <field name="worked_years"/>
                            <field name="dependant_of_taxpayer"/>
                        </group>
                    </xpath>
                    <xpath expr="//page[@string='HR Settings']" position="after">
                        <page string="History" groups="base.group_hr_user">
                        	<field name="employee_history">
                            	<tree string='Histories'>
                            		<field name="create_date"/>
	                                <field name="user_id"/>
	                                <field name="parent_id"/>
	                                <field name="department_id"/>
	                                <field name="job_id"/>
	                                
	                                <field name="joining_date"/>
	                                <field name="worked_years"/>
                            	</tree>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
