<openerp>
	<data>
		
		<menuitem action="hr_contract.action_hr_contract" id="hr_contract.hr_menu_contract" 
		parent="hr.menu_hr_main" name="Contracts" sequence="4" 
		groups="base.group_hr_manager,group_hr_salary_officer"/>
		
		<record id="view_contract_form_add_basic_salary" model="ir.ui.view">
            <field name="name">view.contract.form.add.basic.salary</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <data>
                	<xpath expr="//field[@name='wage']" position="before">
                		<field name="other_wage"/>
                    </xpath>
                    
                    <xpath expr="//group[@name='duration_group']" position="after">
                        <group name="salary_rule_group" string="Salary Rules">
                			<field name="contract_salary_rule_ids" nolabel='1'>
            					<tree string="Rules" editable='top'>
            						<field name="sequence"/>
		                            <field name="salary_rule_id"/>
		                            <field name="amount"/>
            					</tree>	
            				</field>
                        </group>
                        <group name="overtime_group" string="Overtime">
                			<field name="days_by_month"/>
                            <field name="hours_by_day"/>
                            <field name="overtime_rate"/>
                        </group>
                    </xpath>
                    
                </data>
            </field>
        </record>
        
    </data>
</openerp>