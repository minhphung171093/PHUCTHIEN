<openerp>
    <data>
    	
    	<!-- Hr employee inherit Legal Leaves -->
    	<record id="act_hr_employee_allocation_request" model="ir.actions.act_window">
            <field name="name">Allocation Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.holidays</field>
            <field name="src_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
            <field name="domain">[('type','=','add')]</field>
            <field name="view_id" ref="hr_holidays.view_holiday_allocation_tree"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_hr_employee_allocation_request_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_holidays.view_holiday_allocation_tree"/>
            <field name="act_window_id" ref="act_hr_employee_allocation_request"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_hr_employee_allocation_request_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_holidays.allocation_leave_new"/>
            <field name="act_window_id" ref="act_hr_employee_allocation_request"/>
        </record>
        
        <record id="view_employee_form_add_allocation_request" model="ir.ui.view">
            <field name="name">view.employee.form.add.allocation.request</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="%(act_hr_employee_allocation_request)d" string="Allocation Requests" type="action" groups="base.group_hr_user"/>
                </xpath>
            </field>
        </record>
        
    	<record id="view_hr_holidays_filter_general_modify" model="ir.ui.view">
            <field name="name">view.hr.holidays.filter.general.modify</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='holiday_status_id']" position="after">
                	<field name="day" string='Date' widget="date" filter_domain="[('date_from','&lt;=',self), ('date_to','&gt;=',self)]"/>
                </xpath>
            </field>
        </record>
        
		<record model="ir.ui.view" id="hr_holidays.edit_holiday_status_form">
            <field name="name">hr.holidays.status.form</field>
            <field name="model">hr.holidays.status</field>
            <field name="arch" type="xml">
                <form string="Leave Type" version="7.0">
                	<header>
	                    <button string="Generate Allocation Request" name="generate_allocation_request" type="object" groups="base.group_hr_user" class="oe_highlight" attrs="{'invisible':[('auto_create', '!=', True)]}"/>
	                </header>
                    <group col="4">
                        <field name="name"/>
                        <field name="categ_id"/>
                        <field name="paid_method"/>
                    </group>
                    <notebook>
                      <page string="Details">
                          <group>
                              <group name="selection" string="Validation">
                                  <field name="double_validation"/>
                                  <field name="limit"/>
                                  <field name="auto_create" />
                        		  <field name="number_days"  attrs="{'invisible':[('auto_create','=',False)]}"/>
                              </group>
                              <group name="second" string="Misc">
                                  <field name="color_name"/>
                                  <field name="active"/>
                              </group>
                          </group>
                      </page>
                    </notebook>
                </form>
    		</field>
        </record>
        
        <!-- Add buttons on Tree View Leave Request -->
        <record id="view_holiday_tree_general_modify" model="ir.ui.view">
            <field name="name">view.holiday.tree.general.modify</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_holidays.view_holiday"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                	<button icon="gtk-apply" string="Approve" name="validate" states="confirm" type="workflow" groups="base.group_hr_user"/>
                    <button icon="terp-check" string="Validate" name="second_validate" states="validate1" type="workflow" groups="base.group_hr_user"/>
                    <button icon="gtk-cancel" string="Refuse" name="refuse" states="confirm,validate1,validate" type="workflow" groups="base.group_hr_user"/>
                    <button icon="gtk-refresh" string="Reset to New" name="set_to_draft" states="refuse" type="object" groups="base.group_hr_user"/>
                </xpath>
            </field>
        </record>
        
        <!-- Add buttons on Tree View Allocation Request -->
        <record id="view_holiday_allocation_tree_general_modify" model="ir.ui.view">
            <field name="name">view.holiday.allocation.tree.general.modify</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_holidays.view_holiday_allocation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                	<button icon="gtk-apply" string="Approve" name="validate" states="confirm" type="workflow" groups="base.group_hr_user" class="oe_highlight"/>
                    <button icon="terp-check" string="Validate" name="second_validate" states="validate1" type="workflow" groups="base.group_hr_user" class="oe_highlight"/>
                    <button icon="gtk-cancel" string="Refuse" name="refuse" states="confirm,validate,validate1" type="workflow" groups="base.group_hr_user"/>
                    <button icon="gtk-refresh" string="Reset to New" name="set_to_draft" states="cancel,refuse" type="object" groups="base.group_hr_user"/>
                </xpath>
            </field>
        </record>
        
        <!-- Changing Default Filter on Menu Action -->
        <record model="ir.actions.act_window" id="hr_holidays.open_ask_holidays">
            <field name="name">Leave Requests</field>
            <field name="res_model">hr.holidays</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="hr_holidays.edit_holiday_new"/>
            <field name="context">{'default_type': 'remove', 'search_default_year':1, 'search_default_my_leaves':0}</field>
            <field name="domain">[('type','=','remove')]</field>
            <field name="search_view_id" ref="hr_holidays.view_hr_holidays_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new leave request.
              </p><p>
                Once you have recorded your leave request, it will be sent
                to a manager for validation. Be sure to set the right leave
                type (recuperation, legal holidays, sickness) and the exact
                number of open days related to your leave.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="hr_holidays.request_approve_holidays">
            <field name="name">Requests to Approve</field>
            <field name="res_model">hr.holidays</field>
            <field name="view_type">form</field>
            <field name="context">{'default_type': 'remove', 'search_default_year':1, 'search_default_approve':0}</field>
            <field name="domain">[('type','=','remove')]</field>
            <field name="view_id" ref="hr_holidays.edit_holiday_new"/>
            <field name="search_view_id" ref="hr_holidays.view_hr_holidays_filter"/>
        </record>
        
        <record model="ir.actions.act_window" id="hr_holidays.open_allocation_holidays">
            <field name="name">Allocation Requests</field>
            <field name="res_model">hr.holidays</field>
            <field name="view_type">form</field>
            <field name="context">{'default_type':'add', 'search_default_year':1, 'search_default_my_leaves':0}</field>
            <field name="domain">[('type','=','add')]</field>
            <field name="view_id" ref="hr_holidays.allocation_leave_new"/>
            <field name="search_view_id" ref="hr_holidays.view_hr_holidays_filter"/>
        </record>
        
        <record model="ir.actions.act_window" id="hr_holidays.open_company_allocation">
            <field name="name">Leaves Summary</field>
            <field name="res_model">hr.holidays</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr_holidays.view_holiday_simple"/>
            <field name="context">{'search_default_year':1, 'search_default_validated': 1, 'search_default_group_employee': 1, 'search_default_group_type': 1}</field>
            <field name="domain">[('holiday_type','=','employee')]</field>
            <field name="search_view_id" ref="hr_holidays.view_hr_holidays_filter"/>
        </record>
        
    </data>
</openerp>
