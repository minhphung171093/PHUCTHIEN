<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate='1'>
    	
    	<!-- Submit to Manager -->
        <record id="email_template_advance_submit_to_manager" model="email.template">
            <field name="name">Submit to Manager</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="subject">${object.name}</field>
            <field name="email_to">${object.employee_id.coach_id.work_email}</field>
            <field name="model_id" ref="hr_expense.model_hr_expense_expense"/>
            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="True"/>
            <field name="lang">${object.employee_id.user_id.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<p>Dear ${object.employee_id.coach_id.name},</p>
<p>Employee name: ${object.employee_id.name}<br/>
<p>Regards,</p>
            ]]></field>
        </record>
		
